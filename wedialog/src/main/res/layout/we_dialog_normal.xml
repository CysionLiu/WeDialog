<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/we_normal_box_pad"
    android:background="@drawable/we_shape_round_dialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/we_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:text="@string/we_str_title"
        android:textColor="@color/we_title_color"
        android:textSize="@dimen/we_title_size" />

    <TextView
        android:id="@+id/we_tv_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:minHeight="60dp"
        android:paddingLeft="6dp"
        android:text="@string/we_str_text"
        android:textColor="@color/we_text_color"
        android:textSize="@dimen/we_text_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/we_btn_negative"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/we_shape_round_left_button"
            android:gravity="center"
            android:textAllCaps="false"
            android:maxLines="1"
            android:text="@string/we_str_no_text"
            android:textColor="@color/we_no_color"
            android:textSize="@dimen/we_no_size" />


        <Button
            android:id="@+id/we_btn_positive"
            android:layout_width="0dip"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/we_shape_round_right_button"
            android:maxLines="1"
            android:text="@string/we_str_yes_text"
            android:textAllCaps="false"
            android:textColor="@color/we_yes_color"
            android:textSize="@dimen/we_yes_size" />
    </LinearLayout>

</LinearLayout>